{
  "log": {
    "loglevel": "info"
  },
  "dns": {
    "servers": [
      {
        "address": "https://1.1.1.1/dns-query",
        "domains": [
          "geosite:geolocation-!cn"
        ]
      },
      {
        "address": "https://223.5.5.5/dns-query",
        "domains": [
          "geosite:cn"
        ]
      },
      "localhost"
    ]
  },
  "inbounds": [
    {
      "port": 1080,
      "listen": "127.0.0.1",
      "protocol": "socks",
      "settings": {
        "auth": "noauth",
        "udp": true
      },
      "sniffing": {
        "enabled": true,
        "destOverride": ["http", "tls", "quic"]
      }
    },
    {
      "port": 8080,
      "listen": "127.0.0.1",
      "protocol": "http",
      "settings": {},
      "sniffing": {
        "enabled": true,
        "destOverride": ["http", "tls"]
      }
    }
  ],
  "outbounds": [
    {
      "tag": "proxy-lb",
      "protocol": "freedom",
      "settings": {}
    },
    {
      "tag": "proxy-1",
      "protocol": "vless",
      "settings": {
        "vnext": [
          {
            "address": "server1.example.com",
            "port": 443,
            "users": [
              {
                "id": "ffc677c5-0ac8-4ce1-8413-c2daf5a7fedb",
                "encryption": "none",
                "flow": "xtls-rprx-vision"
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "tcp",
        "security": "tls",
        "tlsSettings": {
          "serverName": "server1.example.com",
          "allowInsecure": false,
          "fingerprint": "chrome"
        }
      }
    },
    {
      "tag": "proxy-2",
      "protocol": "vless",
      "settings": {
        "vnext": [
          {
            "address": "server2.example.com",
            "port": 443,
            "users": [
              {
                "id": "900a60b3-2f42-444f-9193-bca56d2390de",
                "encryption": "none"
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "ws",
        "security": "tls",
        "wsSettings": {
          "path": "/vless-ws"
        },
        "tlsSettings": {
          "serverName": "server2.example.com",
          "allowInsecure": false
        }
      }
    },
    {
      "tag": "proxy-3",
      "protocol": "vmess",
      "settings": {
        "vnext": [
          {
            "address": "server3.example.com",
            "port": 443,
            "users": [
              {
                "id": "01bd899c-4792-47f2-b4c5-a3471c054e13",
                "alterId": 0,
                "security": "auto"
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "grpc",
        "security": "tls",
        "grpcSettings": {
          "serviceName": "VmessGrpcService"
        },
        "tlsSettings": {
          "serverName": "server3.example.com",
          "allowInsecure": false
        }
      }
    },
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {}
    },
    {
      "tag": "block",
      "protocol": "blackhole",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "IPIfNonMatch",
    "balancers": [
      {
        "tag": "balancer",
        "selector": [
          "proxy-1",
          "proxy-2",
          "proxy-3"
        ],
        "strategy": {
          "type": "leastPing"
        }
      }
    ],
    "rules": [
      {
        "type": "field",
        "domain": [
          "geosite:category-ads-all"
        ],
        "outboundTag": "block"
      },
      {
        "type": "field",
        "protocol": [
          "bittorrent"
        ],
        "outboundTag": "direct"
      },
      {
        "type": "field",
        "ip": [
          "geoip:private",
          "geoip:cn"
        ],
        "outboundTag": "direct"
      },
      {
        "type": "field",
        "domain": [
          "geosite:cn"
        ],
        "outboundTag": "direct"
      },
      {
        "type": "field",
        "balancerTag": "balancer",
        "network": "tcp,udp"
      }
    ]
  },
  "observatory": {
    "subjectSelector": [
      "proxy-1",
      "proxy-2",
      "proxy-3"
    ],
    "probeURL": "https://www.google.com/generate_204",
    "probeInterval": "1m"
  }
}
